<footer class="footer">
  <nav>
    <ul>
      <li><%= link_to "アップデート情報", updates_path %></li>
    </ul>
  </nav>
  <small>
    <a href="#">© 2020 uminchu.com Inc. All Rights Reserved.</a>
  </small>
  <% if logged_in? %>
    <div class="container">
      <ul class="row">
        <nav class="navbar fixed-bottom navbar-dark bg-dark justify-content-around">
          <li class="pen col-xs-2">
            <%= link_to(root_path) do %>
              <i class="fas fa-home fa-lg"></i>
            <% end %>
          </li>
          <li class="pen col-xs-2">
            <div data-toggle="modal" data-target="#modal1"><i class="far fa-edit fa-lg" ></i></div>
          </li>
          <li class="pen col-xs-2">
            <%= link_to(events_path) do %>
              <i class="far fa-calendar-alt fa-lg"></i>
            <% end %>
          </li>
          <li class="bell col-xs-2"><%= render 'shared/notice_maru' %></li>
          <li class="pen col-xs-2">
            <%= link_to(edit_user_path(current_user)) do %>
              <i class="fas fa-user-cog fa-lg"></i>
            <% end %>
          </li>
        </nav>
          <div class="modal fade" id="modal1" tabindex="-1"
                role="dialog" aria-labelledby="label1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <%# <div class="modal-header">
                  <h5 class="modal-title" id="label1">Modal title</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div> %>
                <div class="modal-body">
                  <%= render 'shared/micropost_form' %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
      </ul>
    </div>
  <% end %>
</footer>
