<% provide(:title, 'Log in') %>
<h1>ログイン</h1>

<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', value: @user.email %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', value: @user.password %>

      <div class="mt-3"></div>
      <span>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        ログイン情報を記憶する</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-primary mb-2" %>

      <p>アカウント登録がまだの方は<%= link_to "コチラ", signup_path %></p>

    <% end %>
  </div>
</div>