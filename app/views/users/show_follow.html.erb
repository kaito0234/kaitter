<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.icon.present? %>
        <div class="icon"><%= link_to image_tag("#{@user.icon}", size: 200 ), @user %></div>
      <% else %>
        <%= link_to gravatar_for(@user, size: 200 ), @user %>
      <% end %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "自分のツイート", @user %></span>
      <span><b>ツイート数 (<%= @user.microposts.count %>)</b>
      </span>
    </section>

    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
          <% if user.icon.present? %>
            <div class="icon"><%= link_to image_tag("#{user.icon}", size: 30 ), user %></div>
          <% else %>
            <%= link_to gravatar_for(user, size: 30 ), user %>
          <% end %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>

  <div class=""col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
