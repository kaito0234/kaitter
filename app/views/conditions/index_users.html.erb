<div class="row mb-3">
  <div class="col-2">
    <%= current_user.name %>
  </div>
  <% @days.each do |day| %>
    <div class="col-1 px-0 mx-2 center">
      <p><%= day.strftime("%m/%d") %></p>
    <% @conditions.each do |condition| %>
      <% if Rails.env.development? %>
        <% if day.strftime("%Y-%m-%d") == condition[0] %>
          <div class="row justify-content-center">
            <div class="col-auto">
              <p><%= condition[1].round %></p>
            </div>
          </div>
        <% end %>
      <% end %>
      <% if Rails.env.production? %>
        <% if day == condition[0] %>
          <div class="row justify-content-center">
            <div class="col-auto">
              <p><%= condition[1].round %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
    </div>
  <% end %>
  <div class="w-100"></div>
  <div class="col-2">
    <% @condition_users.each do |user| %>
      <div class="row my-3">
        <div class="col-12">
          <%= user.name %>
        </div>
      </div>
    <% end %>
  </div>
  <% @days.each do |day| %>
    <div class="col-1 px-0 mx-2 my-3 center">
      <% @user_conditions.each do |conditions| %>
        <div class="row justify-content-center center">
          <% conditions.each do |condition| %> 
            <% if Rails.env.development? %>
              <% if day.strftime("%Y-%m-%d") == condition[0] %>
                <div class="col-auto">
                  <p><%= condition[1].round %></p>
                </div>
              <% end %>
            <% end %>
            <% if Rails.env.production? %>
              <% if day == condition[0] %>
                <div class="col-auto">
                  <p><%= condition[1].round %></p>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


<div class="row justify-content-center center">
<% @user_conditions.each do |user_conditions| %>
  <% if @user_id.blank? || @user_id == user_conditions[0][0] %>
    <%= user_conditions[1].round %>
    <% @user_id = user_conditions[0][0] %>
  <% else %>
    <div class="w-100"></div>
    <%= user_conditions[1].round %>
    <% @user_id = user_conditions[0][0] %>
  <% end %>
<% end %>
</div>