<% provide(:title, "Comment") %>
<ol class="microposts">
<li>
<div class="microposts">
  <% if @micropost.user.icon.present? %>
    <div class="icon"><%= link_to image_tag("#{@micropost.user.icon}", size: 100), @micropost.user %></div>
  <% else %>
    <%= link_to gravatar_for(@micropost.user, size: 100 ), @micropost.user %>
  <% end %>

  <span class="user">
    <%= link_to @micropost.user.name, @micropost.user, style: 'color: black; font-weight: bold;' %>
  </span>

  <span class="timestamp">
    <%= @micropost.created_at.strftime("%Y-%m-%d %H:%M") %>に投稿 
    <%= time_ago_in_words(@micropost.created_at) %> ago.

    <% if current_user?(@micropost.user) %>
      <%= link_to "ツイートを削除", @micropost, method: :delete, data: { confirm: "本当にこのツイートを削除しますか？" } %>
    <% end %>
  </span>

  <span class="content">
    <%= @micropost.content %>
    <%= image_tag @micropost.picture.url if @micropost.picture? %>
  </span>

  <span class="like">
    <% if @micropost.liked?(current_user) %>
      <%= link_to micropost_likes_path(@micropost.id), method: :delete do %>
        <i class="fas fa-heart"></i>
      <% end %>
    <% else %>
      <%= link_to micropost_likes_path(@micropost.id), method: :post do %>
        <i class="far fa-heart"></i>
      <% end %>
    <% end %>

    <%= @micropost.likes.count %>
    <p style="display:inline;">　</p>
    <%= link_to micropost_path(@micropost.id) do %>
      <i class="far fa-comment-alt"></i>
    <% end %>
    <%= @micropost.comments.count %>
  </span>

</div>
<li></li>
</li>
</ol>

<h6>返信</h6>
<ol class="microposts">
<% if @comments %>
  <% @comments.each do |comment| %>
<li>
  <div class="microposts">
    <% if comment.user.icon.present? %>
      <div class="icon"><%= link_to image_tag("#{comment.user.icon}", size: 80, style: 'border-radius: 50%;' ), comment.user %></div>
    <% else %>
      <%= link_to gravatar_for(comment.user, size: 80 ), comment.user %>
    <% end %>
    <span class="user"><%= link_to comment.user.name, comment.user, style: 'color: black; font-weight: bold;' %></span>
    <span class="timestamp">
      <%= comment.created_at.strftime("%Y-%m-%d %H:%M") %>に投稿 
      <%= time_ago_in_words(comment.created_at) %> ago.
      <% if current_user?(comment.user) %>
        <%= link_to "コメントを削除", micropost_comment_path(comment.micropost_id, comment), method: :delete,
                                                   data: { confirm: "本当にこのコメントを削除しますか？" } %>
      <% end %>
    </span>
    <span class="content"><%= comment.text %></span>
  </div>
</li>
  <% end %>
<% end %>
</ol>

 <%= form_for(@comment, url: micropost_comments_path(@micropost)) do |f| %>
  <%= f.text_area :text, class: 'form-control', placeholder: "コメントを入力…" %>
  <%= f.submit "コメントする", class: "btn btn-primary btn-lg" %>
<% end %>

