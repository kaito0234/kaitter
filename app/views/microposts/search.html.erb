<% provide(:title, "search") %>
<h1>検索</h1>
<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_tag(search_path, :method => 'get') do %>
      <%= text_field_tag :search %>
      <div class="mb-3"></div>
      <%= submit_tag '検索', :name => nil %>
    <% end %>
  </div>
</div>
<div class="mb-5"></div>
<% if @microposts.nil? %>

<% else %>
<ol class="microposts">
  <%= render @microposts %>
</ol>
  <%= will_paginate @microposts %>
<% end %>